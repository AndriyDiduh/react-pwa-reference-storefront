pipeline {
    agent any
    stages {
        stage('Publish') {
            steps {
                withCredentials([usernamePassword(credentialsId: "ep-github-token-as-pass-buildadmin", passwordVariable: "GIT_PASSWORD", usernameVariable: "GIT_USERNAME")]) {
                    sh("docker build --build-arg NPM_TOKEN=$NPM_TOKEN GIT_PASSWORD=$GIT_PASSWORD GIT_USERNAME=$GIT_USERNAME GIT_URL=$GIT_URL -f ./docker/components/Dockerfile .")
                }
            }
        }
    }
}
