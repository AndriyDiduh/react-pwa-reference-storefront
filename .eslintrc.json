{
  "extends": ["./base-eslintrc.json"],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": {
          "resolve": {
            "modules": ["../node_modules"],
            "extentions": [
              ".js",
              ".jsx",
              ".ts",
              ".tsx",
              ".json",
              ".png",
              ".jpg"
            ]
          }
        }
      }
    }
  },
  "rules": {
    "max-lines-per-function": ["error"]
  },
  "overrides": [
    {
      "files": ["src/components/**", "src/containers/**"],
      "rules": {
        "max-lines-per-function": ["error", 120]
      }
    }
  ]
}
