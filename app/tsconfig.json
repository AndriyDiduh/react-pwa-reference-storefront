{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "allowJs": true,
    "lib": [
      "es5",
      "es2015",
      "dom"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "config-overrides.js",
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "config"
  ],
  "include": [
    "src"
  ]
}
